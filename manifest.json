{
  "manifest_version": 3,
  "name": "TABARC Recon Command Center",
  "version": "2.2.1",
  "description": "Recon workspace. Query builder, packs, batch stepping, canary checks.",
  "incognito": "split",
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "Open Recon Panel"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "tabs"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}